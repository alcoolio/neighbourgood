# NeighbourGood Configuration
# Copy this file to .env and adjust values as needed.

# Database: SQLite (dev) or PostgreSQL (production, used by docker-compose)
# NG_DATABASE_URL=sqlite:///./neighbourgood.db
# NG_DATABASE_URL=postgresql://neighbourgood:neighbourgood@localhost:5432/neighbourgood

# Platform mode: "blue" (normal) or "red" (crisis)
NG_PLATFORM_MODE=blue

# Debug mode (disable in production)
NG_DEBUG=false

# Instance identity – shown in /instance/info for federation discovery
NG_INSTANCE_NAME=My NeighbourGood
NG_INSTANCE_DESCRIPTION=A neighbourhood resource-sharing community
NG_INSTANCE_REGION=Berlin, Germany
NG_INSTANCE_URL=https://neighbourgood.example.com
NG_ADMIN_NAME=Jane Doe
NG_ADMIN_CONTACT=admin@neighbourgood.example.com

# SMTP (optional – logs emails to console when unconfigured)
# NG_SMTP_HOST=smtp.example.com
# NG_SMTP_PORT=587
# NG_SMTP_TLS=true
# NG_SMTP_USER=your-email@example.com
# NG_SMTP_PASSWORD=your-password
# NG_SMTP_FROM=noreply@neighbourgood.local

# Frontend URL (used in notification emails)
NG_FRONTEND_URL=http://localhost:3800

# CORS allowed origins (JSON array)
NG_CORS_ORIGINS=["http://localhost:3800","http://localhost:5173"]
